<header class="bg-gray-900 border-b border-gray-700 sticky top-0 z-50">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
            <a href="/" class="flex items-center space-x-2">
                <span class="text-xl font-bold text-white font-pacifico">{{ config("APP_NAME") }}</span>
            </a>

            <nav class="hidden md:flex items-center space-x-8">
                <a href="{{ route("home") }}" class="flex items-center space-x-2 {% if route("current") == route("home") %}text-gray-100 font-bold{% else %}text-gray-300{% endif%} hover:text-white transition-colors whitespace-nowrap">
                    <div class="w-5 h-5 flex items-center justify-center">
                        <i class="ri-home-line text-sm group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <span>Home</span>
                </a>
                <a href="{{ route("store") }}" class="flex items-center space-x-2 {% if route("current") == route("store") %}text-gray-100 font-bold{% else %}text-gray-300{% endif%} hover:text-white transition-colors whitespace-nowrap">
                    <div class="w-5 h-5 flex items-center justify-center">
                        <i class="ri-store-line text-sm group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <span>Store</span>
                </a>
                <a href="#" class="flex items-center space-x-2 text-gray-300 hover:text-white transition-colors whitespace-nowrap">
                    <div class="w-5 h-5 flex items-center justify-center">
                        <i class="ri-file-list-line text-sm group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    Wiki
                </a>
                <a href="#" class="flex items-center space-x-2 text-gray-300 hover:text-white transition-colors whitespace-nowrap">
                    <div class="w-5 h-5 flex items-center justify-center">
                        <i class="ri-artboard-line text-sm group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    Launcher
                </a>
            </nav>

            {% if auth("loggedIn") %}
                <div class="hidden md:flex items-center space-x-4">
                    {% if (auth("access") >= 40) %}
                        <a href="{{ route("panel.dashboard") }}" class="text-gray-300 hover:text-white transition-colors whitespace-nowrap">
                            Panel
                        </a>
                    {% endif %}

                    <div class="relative inline-block text-left">
                        <a id="menu-button" href="#" class="md:flex text-gray-300 hover:text-white transition-colors whitespace-nowrap">
                            Account
                            <svg class="-mr-1 size-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
                                <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                            </svg>

                            <div id="menu-dropdown" role="menu"
                                 class="hidden absolute right-0 z-50 mt-2 w-48 origin-top-right bg-gray-800 shadow-lg rounded-md ring-1 ring-black/10 transform transition duration-100 ease-out opacity-0 scale-95">
                                <div class="py-1" role="none">
                                    <a href="{{ route("auth.account") }}" class="block px-4 py-2 text-sm text-gray-200 hover:text-white">Account</a>
                                </div>
                                <div class="py-1" role="none">
                                    <a href="{{ route("auth.logout") }}" class="block px-4 py-2 text-sm text-gray-200 hover:text-white">Logout</a>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="hidden md:flex items-center space-x-4">
                    <a href="{{ route("login_page") }}" class="flex items-center space-x-2 {% if route("current") == route("login_page") %}text-gray-100 font-bold{% else %}text-gray-300{% endif%} hover:text-white transition-colors whitespace-nowrap">
                        <div class="w-4 h-4 flex items-center justify-center">
                            <i class="ri-login-circle-line text-sm group-hover:scale-110 transition-transform duration-300"></i>
                        </div>
                        <span>Login</span>
                    </a>
                    <a href="{{ route("register_page") }}"
                       class="flex items-center space-x-2 bg-gray-700 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-all whitespace-nowrap">
                        <div class="w-4 h-4 flex items-center justify-center">
                            <i class="ri-user-add-line text-sm group-hover:scale-110 transition-transform duration-300"></i>
                        </div>
                        <span>Register</span>
                    </a>
                </div>
            {% endif %}

        </div>

        <div class="md:hidden py-4 border-t border-gray-700">
            <nav class="flex flex-col space-y-2">
                <a href="{{ route("home") }}" class="text-gray-300 hover:text-white py-2 transition-colors">
                    Home
                </a>
                <a href="{{ route("store") }}" class="text-gray-300 hover:text-white py-2 transition-colors">
                    Store
                </a>
                <a href="#" class="text-gray-300 hover:text-white py-2 transition-colors">
                    Wiki
                </a>
                <a href="#" class="text-gray-300 hover:text-white py-2 transition-colors">
                    Launcher
                </a>
                {% if auth("loggedIn") %}
                {% else %}
                    <div class="flex space-x-4 pt-4">
                        <a href="{{ route("login_page") }}" class="text-gray-300 hover:text-white transition-colors">
                            Login
                        </a>
                        <a href="{{ route("register_page") }}"
                           class="bg-gray-700 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-all whitespace-nowrap">
                            Register
                        </a>
                    </div>
                {% endif %}
            </nav>
        </div>
    </div>
</header>