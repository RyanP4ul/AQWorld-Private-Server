<div class="col-md-{{ col }}">
    <div class="form-group">
        <label>{{ name }}</label>
        <select id="_{{ name }}" name="{{ name }}" class="form-control">
            {% if value %} <option name="{{ value }}" selected>{{ value }}</option> {% endif %}
            {% for option in options %}
                <option name="{{ option }}" {% if selected == option %} selected {% endif %}>{{ option }}</option>
            {% endfor %}
        </select>
        <span id="{{ name }}-error" class="text-sm"></span>
    </div>
</div>